            <ul class="item genre-link">
                <li>
                    <a href="#" class="item" style="margin: 0;">Genre <i class="fa-solid fa-xs fa-caret-down"></i></a>
                    <div class="dropdown-genre">
                        <div class="arrow"></div>
                        <ul class="genre-item">
                            <li>
                                <p class="h1" style="margin: auto 0.6rem; font-size:1.2rem;">Movie</p>
                            </li>
                            <% movieGenre.genres.forEach(gen=> { %>
                                <li><a href="/api/genre/movie/<%= gen.id %>?name=<%= gen.name %>" class="item">
                                        <%= gen.name %>
                                    </a></li>
                                <% }) %>
                        </ul>
                        <ul class="genre-item">
                            <li>
                                <p class="h1" style="margin: auto 0.6rem; font-size: 1.2rem;">TV</p>
                            </li>
                            <% tvGenre.genres.forEach(gen=> { %>
                                <li><a href="/api/genre/tv/<%= gen.id %>?name=<%= gen.name %>" class="item">
                                        <%= gen.name %>
                                    </a></li>
                                <% }) %>
                        </ul>
                    </div>
                </li>
            </ul>
            <a class="item link">Trending</a>
            <a class="item link">TV Shows</a>
            <a class="item link">Anime</a>
        </div>
        <div class="navbar-item navbar-search-item">
            <form class="search" action="/api/search">
                <input class="search-item" type="text" name="query" id="" placeholder="Search Here..."><input
                    class="search-item fa-solid" type="submit" value="&#xf002">
            </form>
            <% if (user) { %>
                <div class="item">
                    <div class="dropdown">
                        <button class="btn"><img src="/img/icons/ghost.png" class="icon" />
                            <%= user.name %>
                        </button>
                        <div class="dropdown-content">
                            <a href="">My Bucket</a>
                            <% if (user.admin) { %>
                                <a href="#" class="link">Statistics</a>
                                <a href="/api/upload/movieUpload" class="link">Movie Management</a>
                                <a href="#" class="link">Stream Management</a>
                            <% } %>
                            <a href="/api/auth/logout">Log Out</a>
                        </div>
                    </div>
                </div>
                <% } else { %>
                    <div class="item"> 
                        <a class="item link"  id="login">Log In</a>
                        <button class="btn" id="signup">Sign Up</button>
                    </div>
                <% } %>
        </div>
        <div class="navbar-item-mobile" id="ham">
            <div class="navbar-item-m">
                <a class="item link" href="/">Home</a>
                <ul class="item genre-link">
                    <li>
                        <a href="#" class="item" style="margin: 0;">Genre <i class="fa-solid fa-xs fa-caret-down"
                                id="gen-mobile"></i></a>
                        <div class="dropdown-genre">
                            <div class="arrow"></div>
                            <ul class="genre-item">
                                <li>
                                    <p class="h1" style="margin: auto 0.6rem; font-size:1.2rem;">Movie</p>
                                </li>
                                <% movieGenre.genres.forEach(gen=> { %>
                                    <li><a href="/api/genre/movie/<%= gen.id %>?name=<%= gen.name %>" class="item">
                                            <%= gen.name %>
                                        </a></li>
                                    <% }) %>
                            </ul>
                            <ul class="genre-item">
                                <li>
                                    <p class="h1" style="margin: auto 0.6rem; font-size: 1.2rem;">TV</p>
                                </li>
                                <% tvGenre.genres.forEach(gen=> { %>
                                    <li><a href="/api/genre/tv/<%= gen.id %>?name=<%= gen.name %>" class="item">
                                            <%= gen.name %>
                                        </a></li>
                                    <% }) %>
                            </ul>
                        </div>
                    </li>
                </ul>
                <a class="item link">Trending</a>
                <a class="item link">TV Shows</a>
                <a class="item link">Anime</a>
            </div>
        </div>
    </nav>


    <!-- movie -->
    <main>
        <div class="movie mobile-movie">
            <% var season=[]; %>
                    <% for (var i=0, len=seasons.length; i<len; i++) { %>
                    <% season.push( seasons[i] )%>
            <% } %>
            <div class="object col-3" style="flex:1;">
                <iframe src="https://vidsrc.to/embed/tv/<%= tv.id %>/<%= season[0].season_number %>/1" allowfullscreen="allowfullscreen"
                    mozallowfullscreen="mozallowfullscreen" msallowfullscreen="msallowfullscreen"
                    oallowfullscreen="oallowfullscreen" webkitallowfullscreen="webkitallowfullscreen"></iframe>
                <!-- <div class="movie">
                    <h1>Season Info</h1>
                    <div class="poster-div">
                        <% if (season[0].poster_path) { %>
                            <img src="http://image.tmdb.org/t/p/w300<%= season[0].poster_path %>" alt="<%= season[0].name %>"
                                class="poster" />
                            <% } else { %>
                                <img src="/img/pos_thumbnail.png" alt="<%= season[0].name %>" class="poster" />
                        <% } %>
                    </div>
                    <div class="col">
                        <p><%= season[0].name %></p>
                        <p><%= season[0].overview %></p>
                        <p><%= season[0].episode_count %></p>
                        <p><%= season[0].air_date %></p>
                        <p><%= season[0].vote_average %></p>
                    </div>
                </div> -->
            </div>
            <div class="side-video">
                <div class="extras">
                    <select class="extras-head scrollbar select" id="season-select">
                        <% season.forEach(season => { %>
                            <option  value="<%= season.season_number %>">Season <%= season.season_number %> (<%= season.name %>)</option>
                        <% }) %>
                    </select>
                    <div class="youtube-ul video-list scrollbar">
                        <% for( let index = 0; index < season[0].episode_count; index++ ) { %>
                            <% if (index==0) { %>
                                <div class="youtube-li selected" data-site="vidsrc" data-url="https://vidsrc.to/embed/tv/<%= tv.id %>/<%= season[0].season_number %>/<%= index+1 %>">Episode <%= index+1 %></div>
                                <% } else { %>
                                    <div class="youtube-li" data-site="vidsrc" data-url="https://vidsrc.to/embed/tv/<%= tv.id %>/<%= season[0].season_number %>/<%= index+1 %>">Episode <%= index+1 %></div>
                            <% } %>
                        <% } %>
                    </div>
                </div>
                <% var vds=[]; %>
                <% for (var i=0, len=videos.results.length; i<len; i++) { %>
                    <% vds.push( videos.results[i] )%>
                <% } %>
                <% if (vds) { %>
                    <div class="extras ">
                        <div class="extras-head">More Videos</div>
                        <div class="youtube-ul video-list scrollbar">
                        <% vds.forEach((video,index)=> { %>
                            <% if (video.site==='YouTube' ) { %>
                                <div class="youtube-li" style="display: flex;" data-site="youtube"
                                    data-url="https://www.youtube.com/embed/<%= video.key %>?enablejsapi=1">
                                    <div>
                                        <%= index+1 %>.
                                    </div>
                                    <div style="padding-left: 1.5%;">
                                        <%= video.name %> <i class="fa-brands fa-youtube"
                                                style="color: #d00b29;"></i>
                                    </div>
                                </div>
                                <% } %>
                                    <% if (video.site==='Vimeo' ) { %>
                                        <div class="youtube-li" data-site="vimeo"
                                            data-url="https://player.vimeo.com/video/<%= video.key %>">
                                            <%= video.name %> <i class="fa-brands fa-vimeo"
                                                    style="color: #195dd2;"></i>
                                        </div>
                                    <% } %>
                            <% }) %>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
        <div class="movie desktop">
            <div class="poster-div">
                <% if (tv.poster_path) { %>
                    <img src="http://image.tmdb.org/t/p/w300<%= tv.poster_path %>" alt="<%= tv.name %>"
                        class="poster" />
                    <% } else { %>
                        <img src="/img/pos_thumbnail.png" alt="<%= tv.name %>" class="poster" />
                        <% } %>
            </div>
            <div class="col">
                <h2 class="movie-title">
                    <%= tv.name %>
                </h2>
                <% if (tv.tagline) { %>
                    <p><em>"<%= tv.tagline %>"</em></p>
                    <% } %>
                        <span><strong>Genre: </strong>
                            <% tv.genres.forEach((genre,index)=> { %>
                                <% if (index!=tv.genres.length-1) { %>
                                    <a id="<%=genre.id%>">
                                        <%= genre.name %>,
                                    </a>
                                    <% } else { %>
                                        <a id="<%=genre.id%>">
                                            <%= genre.name %>
                                        </a>
                                        <% } %>
                                            <% });%>
                        </span>
                        <span><strong>First Aired on: </strong>
                            <%= tv.first_air_date%>
                        </span>
                        <span><strong>Seasons: </strong>
                            <%= tv.number_of_seasons %>
                        </span>
                        <span><strong>Languages: </strong>
                            <% tv.spoken_languages.forEach((language,index)=> { %>
                                <% if (index!=tv.spoken_languages.length-1) { %>
                                    <em>
                                        <%= language.english_name %>,
                                    </em>
                                    <% } else { %>
                                        <em>
                                            <%= language.english_name %>
                                        </em>
                                        <% } %>
                                            <% }) %>
                        </span>
                        <p><strong>Summary: </strong>
                            <%= tv.overview %>
                        </p>
            </div>
        </div>
        <div class="movie-mobile">
            <div class="row" style="padding-left: 5px;" style="height: 160px;">
                <div class="poster-div">
                <% if (tv.poster_path) { %>
                    <img src="http://image.tmdb.org/t/p/w300<%= tv.poster_path %>" alt="<%= tv.name %>"
                        class="poster" />
                    <% } else { %>
                        <img src="/img/pos_thumbnail.png" alt="<%= tv.name %>" class="poster" />
                        <% } %>
                </div>
                <div style="padding-left:10px; padding-right: 10px; font-size: 0.8rem; line-height: 1.5;">
                <h2 class="movie-title">
                    <%= tv.name %>
                </h2>
                <% if (tv.tagline) { %>
                    <p><em>"<%= tv.tagline %>"</em></p>
                    <% } %>
                        <span style="display: block;"><strong>Genre: </strong>
                            <% tv.genres.forEach((genre,index)=> { %>
                                <% if (index!=tv.genres.length-1) { %>
                                    <a id="<%=genre.id%>">
                                        <%= genre.name %>,
                                    </a>
                                    <% } else { %>
                                        <a id="<%=genre.id%>">
                                            <%= genre.name %>
                                        </a>
                                    <% } %>
                            <% });%>
                        </span>
                        <span style="display: block;"><strong>First Aired on: </strong>
                            <%= tv.first_air_date%>
                        </span>
                        <span style="display: block;"><strong>Seasons: </strong>
                            <%= tv.number_of_seasons %>
                        </span>
                        <span style="display: block;"><strong>Languages: </strong>
                            <% tv.spoken_languages.forEach((language,index)=> { %>
                                <% if (index!=tv.spoken_languages.length-1) { %>
                                    <em>
                                        <%= language.english_name %>,
                                    </em>
                                    <% } else { %>
                                        <em>
                                            <%= language.english_name %>
                                        </em>
                                        <% } %>
                                            <% }) %>
                        </span>
                </div>
            </div>
            <div class="col" style="padding: 10px;text-align: justify;">
                <p><strong>Summary: </strong>
                    <%= tv.overview %>
                </p>
            </div>
        </div>
    </main>
    <div class="login-form" id="" style="width:fit-content;">
        <div class="login-main">
            <div class="login-main-head">
                <h1 style="color:#3A4D39;text-shadow: none;text-align: center;">Login</h1>
                <a id="close"><i class="fa-solid fa-xmark"></i></a>
            </div>
            <form class="login-main-form" name="login-main-form">
                <div class="row-form">
                    <div class="col-25">
                        <label for="email">Email:</label>
                    </div>
                    <div class="col-75">
                        <input type="email" name="email">
                    </div>
                </div>
                <div class="row-form">
                    <div class="err email-err"></div>
                </div>
                <div class="row-form">
                    <div class="col-25">
                        <label for="password">Password:</label>
                    </div>
                    <div class="col-75">
                        <input type="password" name="password">
                    </div>
                </div>
                <div class="row-form">
                    <div class="err pass-err"></div>
                </div>
                <div style="text-align: center; margin:5% 0 0">
                    <button class="btn-rev" type="submit">Login</button>
                </div>
            </form>
        </div>
    </div>
    <div class="signup-form" id="" style="width:fit-content;">
        <div class="signup-main">
            <div class="signup-main-head">
                <h1 style="color:#3A4D39;text-shadow: none; text-align: center;">Register Here</h1>
                <a id="close-signup"><i class="fa-solid fa-xmark"></i></a>
            </div>
            <form class="signup-main-form" name="signup-main-form">
                <div class="row-form">
                    <div class="col-25">
                        <label for="">First Name</label>
                    </div>
                    <div class="col-75">
                        <input type="text" name="first">
                    </div>
                </div>
                <div class="row-form">
                    <div class="err username-err"></div>
                </div>
                <div class="row-form">
                    <div class="col-25">
                        <label for="">Last Name</label>
                    </div>
                    <div class="col-75">
                        <input type="text" name="last">
                    </div>
                </div>
                <div class="row-form">
                    <div class="err username-err"></div>
                </div>
                <div class="row-form">
                    <div class="col-25">
                        <label for="email">Email:</label>
                    </div>
                    <div class="col-75">
                        <input type="email" name="email">
                    </div>
                </div>
                <div class="row-form">
                    <div class="err email-err"></div>
                </div>
                <div class="row-form">
                    <div class="col-25">
                        <label for="password">Password:</label>
                    </div>
                    <div class="col-75">
                        <input type="password" name="password">
                    </div>
                </div>
                <div class="row-form">
                    <div class="err pass-err"></div>
                </div>
                <div style="text-align: center; margin:5% 0 0">
                    <button class="btn-rev" type="submit">Register</button>
                </div>
            </form>
        </div>
    </div>
    <div class="shadow"></div>
    <!-- Footer -->
    <footer>
        <div class="social-links">
            <a class="link"><i class="fa-regular fa-envelope fa-lg"></i></a>
            <a class="link"><i class="fa-brands fa-instagram fa-lg"></i></a>
            <a class="link"><i class="fa-brands fa-twitter fa-lg"></i></a>
            <a class="link"><i class="fa-brands fa-linkedin fa-lg"></i></a>
        </div>
        <p>©XYZ Company | All Rights Reserved.</p>
    </footer>
    
    <!-- data for external js -->
    <span id="tv-id" hidden>
        <%= JSON.stringify(tv.id) %>
    </span>
    <span id="all-seasons" hidden>
        <%= JSON.stringify(season) %>
    </span>
    <script src="/js/navbar.js"></script>
    <script src="/js/video-swap.js"></script>
    <script src="/js/tv.js"></script>
    <script src="/js/auth.js"></script>
</body>

</html>