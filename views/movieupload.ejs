<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@600&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">

    <!-- Font-Awesome Icons CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <!-- Custom stylesheet -->
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/upload.css">

    <!-- data-table css -->
    <link rel="stylesheet" href="/css/jquery.datatable.min.css">
    <link rel="stylesheet" href="/css/login.css">
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar">
        <div class="item mobile-ham">
            <a class="hamburger"><i class="fa-solid fa-bars fa-lg"></i></a>
            <button style="margin-left: 15%;" class="btn"><i class="fa-solid fa-key"></i></button>
            <div class="item" id="mobile-search-icon"><i class="fa-solid fa-magnifying-glass fa-flip-horizontal"></i>
            </div>
            <div class="navbar-item-m" id="mobile-search">
                <form class="search" action="/api/search">
                    <input class="search-item" type="text" name="query" id="" placeholder="Search Here..."><input
                        class="search-item fa-solid" type="submit" value="&#xf002">
                </form>
            </div>
        </div>
        <a class="title" href="/api/dashboard"><img src="/img/brand-logo.png" alt=""></a>

        <div class="navbar-item">
            <a class="item link" href="/">Home</a>
            <ul class="item genre-link">
                <li>
                    <a href="#" class="item" style="margin: 0;">Genre <i class="fa-solid fa-xs fa-caret-down"></i></a>
                    <div class="dropdown-genre">
                        <div class="arrow"></div>
                        <ul class="genre-item">
                            <li>
                                <p class="h1" style="margin: auto 0.6rem; font-size:1.2rem;">Movie</p>
                            </li>
                            <% movieGenre.genres.forEach(gen=> { %>
                                <li><a href="/api/genre/movie/<%= gen.id %>?name=<%= gen.name %>" class="item">
                                        <%= gen.name %>
                                    </a></li>
                                <% }) %>
                        </ul>
                        <ul class="genre-item">
                            <li>
                                <p class="h1" style="margin: auto 0.6rem; font-size: 1.2rem;">TV</p>
                            </li>
                            <% tvGenre.genres.forEach(gen=> { %>
                                <li><a href="/api/genre/tv/<%= gen.id %>?name=<%= gen.name %>" class="item">
                                        <%= gen.name %>
                                    </a></li>
                                <% }) %>
                        </ul>
                    </div>
                </li>
            </ul>
            <a class="item link" href="/api/trending">Trending</a>
            <a class="item link" href="/api/tvShows">TV Shows</a>
        </div>
        <div class="navbar-item navbar-search-item">
            <form class="search" action="/api/search">
                <input class="search-item" type="text" name="query" id="" placeholder="Search Here..."><input
                    class="search-item fa-solid" type="submit" value="&#xf002">
            </form>
            <% if (user) { %>
                <div class="item">
                    <div class="dropdown">
                        <button class="btn"><img src="/img/icons/ghost.png" class="icon" />
                            <%= user.name %>
                        </button>
                        <div class="dropdown-content">
                            <a href="">My Bucket</a>
                            <% if (user.admin) { %>
                                <a href="#" class="link">Statistics</a>
                                <a href="/api/upload/movieUpload" class="link">Movie Management</a>
                                <a href="#" class="link">Stream Management</a>
                            <% } %>
                            <a href="/api/auth/logout">Log Out</a>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
        <div class="navbar-item-mobile" id="ham">
            <div class="navbar-item-m">
                <a class="item link" href="/">Home</a>
                <ul class="item genre-link">
                    <li>
                        <a href="#" class="item" style="margin: 0;">Genre <i class="fa-solid fa-xs fa-caret-down"
                                id="gen-mobile"></i></a>
                        <div class="dropdown-genre">
                            <div class="arrow"></div>
                            <ul class="genre-item">
                                <li>
                                    <p class="h1" style="margin: auto 0.6rem; font-size:1.2rem;">Movie</p>
                                </li>
                                <% movieGenre.genres.forEach(gen=> { %>
                                    <li><a href="/api/genre/movie/<%= gen.id %>?name=<%= gen.name %>" class="item">
                                            <%= gen.name %>
                                        </a></li>
                                    <% }) %>
                            </ul>
                            <ul class="genre-item">
                                <li>
                                    <p class="h1" style="margin: auto 0.6rem; font-size: 1.2rem;">TV</p>
                                </li>
                                <% tvGenre.genres.forEach(gen=> { %>
                                    <li><a href="/api/genre/tv/<%= gen.id %>?name=<%= gen.name %>" class="item">
                                            <%= gen.name %>
                                        </a></li>
                                    <% }) %>
                            </ul>
                        </div>
                    </li>
                </ul>
                <a class="item link" href="/api/trending">Trending</a>
                <a class="item link" href="/api/tvShows">TV Shows</a>
            </div>
        </div>
    </nav>

    <main>
        <h1 style="padding:0 10% 0; font-size: 1.6rem; text-shadow: 0 0 10px rgba(0,0,0,0.9);">Manage Movie</h1>
        <div class="upload-section">
            <div class="col-8">
                <div class="col-child">
                    <h1>Search based on tmdb id or movie name :</h1>
                    <form class="search-upload" action="#" name="search-form">
                        <input class="search-upload-input" type="text" name="query" placeholder="Search Here...">
                        <input class="btn fa-solid" type="submit" value="&#xf002">
                    </form>
                    <div class="search-row">
                        Search to get results...
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer>
        <div class="social-links">
            <a class="link"><i class="fa-regular fa-envelope fa-lg"></i></a>
            <a class="link"><i class="fa-brands fa-instagram fa-lg"></i></a>
            <a class="link"><i class="fa-brands fa-twitter fa-lg"></i></a>
            <a class="link"><i class="fa-brands fa-linkedin fa-lg"></i></a>
        </div>
        <p>Â©XYZ Company | All Rights Reserved.</p>
    </footer>
    <script src="/js/jquery-3.7.1.min.js"></script>
    <script src="/js/movie-upload.js"></script>
    <script src="/js/navbar.js"></script>
    <script src="/js/jquery.datatable.min.js"></script>
</body>

</html>